<h1>Listing all articles</h1>
<p>
	<%= link_to "Create new article", new_article_path %>
</p>

<div class="row">
	<% @articles.each do |a| %>
		<div class="col-sm-4">
			<div class="card" style="margin-bottom:15px">
			  <div class="card-body">
			    <h5 class="card-title"><%= a.title %></h5>
			    <p class="card-text"><%= truncate(a.description, length: 40) %></p>
			    <!--<div class="article-meta-details">-->
			    	<small>
			    		Created by: <%= a.user.username if a.user %>,
			    		<%= time_ago_in_words(a.created_at) %> ago, 
			    		last updated: <%= time_ago_in_words(a.updated_at) %> ago
			    		</small>
			    <!--</div>-->
			    <br>
			    <hr>
			    <%= link_to "Edit", edit_article_path(a), class: "btn btn-sm btn-primary" %>
			    <%= link_to "Show", article_path(a), class: "btn btn-sm btn-success" %>
			    <%= link_to "Delete", article_path(a), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-sm btn-danger" %>
			  </div>
			</div>
		</div>
	<% end %>
</div>